<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/gradient_background">

    <!-- Başlık -->
    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:alpha="0"
        android:shadowColor="#40000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="Mors Kodu Dünyasına Hoş Geldiniz!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationY="50dp" />

    <!-- Mors Kodu Yaz Butonu -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/writeMorseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mors Kodu Yaz"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        app:backgroundTint="#6200EE"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_edit"
        app:iconGravity="start"
        app:iconTint="#FFFFFF"
        android:alpha="0"
        android:translationY="50dp" />

    <!-- Mors Kodunu Öğren Butonu -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/learnMorseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mors Kodunu Öğren"
        android:textSize="18sp"
        android:padding="16dp"
        app:backgroundTint="#4CAF50"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_learn"
        app:iconGravity="start"
        app:iconTint="#FFFFFF"
        android:alpha="0"
        android:translationY="50dp" />
</LinearLayout>